<Window x:Class="First_Drawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First_Drawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" ResizeMode="CanMinimize">
    <Grid Cursor="Pen">
        <Button Content="Draw" HorizontalAlignment="Center"
                Margin="0,40,0,0" VerticalAlignment="Top" Width="75"
                Name="drawButton" Click="DrawButton_Click"/>
        <Canvas HorizontalAlignment="Center"
                Height="200" Width="150"
                Margin="0,300,0,0" VerticalAlignment="Center"
                Name="paperCanvas" Background="#FF6C5A5A" Cursor="Cross"/>
        <Canvas Name="lineCanvas" Background="AliceBlue" Cursor="Cross"
                Height="360" Width="360"
                Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
